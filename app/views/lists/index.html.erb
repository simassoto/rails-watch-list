

<div class="d-flex align-items-center justify-content-between mt-40px">
  <h3 class="mt-140">Movie Lists</h3>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
</div>



          <!-- BEGIN TABLE RESULT -->
      <div class="container">
        <div class="row">
          <div class="col-md-12 fontes">
            <div class="grid search  p-3 ">
              <div class="grid-body">
                <div class="row">
                  <div class="col-md-6">
                    <%= simple_form_for :search, url: lists_path, method: :get do |f| %>
                      <div class="input-group mb-3">
                        <%= text_field_tag :query, params[:query], style: "border-radius: 5px;", class: "form-control", placeholder: "Search" %>
                        <button class="btn-primary ms-1" style="width: 50px; border-radius: 5px; background-color: #7e2bb6; border-color: #7e2bb6;" type="submit"><i class="text-light fa fa-search"></i></button>
                      </div>
                    <% end %>



                    <div class="table-responsive">
                      <ul class="responsive-table">
                        <li class="table-header">
                          <div class="col col-1 fontes">Category</div>
                          <div class="col col-2 fontes">Title</div>
                          <div class="col col-3 fontes">Price</div>
                        </li>

                        <% @lists.each do |list| %>
                          <%= link_to list_path(list) do %>
                            <li class="table-row d-flex">
                              <div class="avatar-bordered col col-1"><img src="https://kitt.lewagon.com/placeholder/users/ssaunier" alt=""></div>
                              <div class="col col-2 product"><strong><%= list.name %></strong></div>
                              <div class="col col-3 fs-6 text-center cor" data-label="Amount"><%= list.favoritors.count %></div>
                            </li>
                          <% end %>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
        <!-- END TABLE RESULT -->

            <!-- BEGIN PAGINATION -->
            <div class="container">
              <ul class="pagination responsive-table ps-4 mt-1">
                <li class="disabled"><a href="#"  style="color: #7e2bb6;">«</a></li>
                <li class="active"><a href="#"  style="color: #7e2bb6;">1</a></li>
                <li><a href="#"  style="color: #7e2bb6;">2</a></li>
                <li><a href="#"  style="color: #7e2bb6;">3</a></li>
                <li><a href="#"  style="color: #7e2bb6;">4</a></li>
                <li><a href="#"  style="color: #7e2bb6;">5</a></li>
                <li><a href="#"  style="color: #7e2bb6;">»</a></li>
              </ul>
            </div>
            <!-- END PAGINATION -->
          </div>
          <!-- END RESULT -->
        </div>
      </div>
    </div>
  </div>
  <!-- END SEARCH RESULT -->
</div>
</div>
