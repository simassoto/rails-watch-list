<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path("background.jpg") %>)">
  <h1>Watch Movie List</h1>
</div>

<div class="d-flex align-items-center justify-content-between mb-3">
  <h3 class="mb-0">Movie Lists</h3>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
</div>
<div class="container">
  <% @lists.each do |list| %>
    <div class="col-12 col-sm-4 col-md-8 align-items-center" >
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card-product">
            <img class="card-product img" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="card-product-infos">
                <h2><%= list.name %></h2>
            </div>
            <div class="card-product-infos">
                <p><%= list.favoritors.count %></p>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


          <!-- BEGIN TABLE RESULT -->
            <div class="table-responsive">
                <ul class="responsive-table">
                  <li class="table-header">
                    <div class="col col-1 fontes">Category</div>
                    <div class="col col-2 fontes">Title</div>
                    <div class="col col-3 fontes">Price</div>
                  </li>

                  <% @lists.each do |list| %>
                    <%= link_to list_path(list) do %>
                      <li class="table-row d-flex">
                        <div class="image col col-1"><img src="https://kitt.lewagon.com/placeholder/users/ssaunier" alt=""></div>
                        <div class="col col-2 product"><strong><%= list.name %></strong></div>
                        <div class="col col-3 fs-6 text-center cor" data-label="Amount"><%= list.favoritors.count %></div>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
            </div>
