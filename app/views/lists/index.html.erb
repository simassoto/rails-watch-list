<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path("background.jpg") %>)">
  <h1>Watch Movie List</h1>
</div>

<div class="d-flex align-items-center justify-content-between mb-3">
  <h3 class="mb-0">Movie Lists</h3>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
</div>
<div class="container">
  <% @lists.each do |list| %>
    <div class="col-12 col-sm-4 col-md-12">
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card-product">
            <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="card-product-infos">
                <h2><%= list.name %></h2>
            </div>
            <div class="card-product-infos">
                <p>list description.</p>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
